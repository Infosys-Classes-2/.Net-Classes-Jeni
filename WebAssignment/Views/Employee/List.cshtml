@{
    ViewData["Title"] = "Employee List";
}

@model List<Employee>


<a asp-controller="Employee" asp-action="Add" class=" btn btn-success" mt="2"><i class="bi bi-plus"></i>Add</a>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Designation</th>
        <th>Level</th>
        <th>Join Date</th>
        <th>Department</th>  
        <th></th>        
    </tr>
    @foreach(Employee employee in Model)
    {
    <tr>
        <td>@employee.FirstName</td>
        <td>@employee.LastName</td>
        <td>@employee.Designation</td>
        <td>@employee.Level</td>
        <td>@employee.JoinDate</td>
        <td>@employee.Department</td>
        <td> 
                <a href="/Employee/Edit/@employee.id"><i class="bi bi-pencil-square">Edit</i></a> 
                <!--<a asp-controller="Employee" asp-action="Edit" aspp-roout-id="@employee.id"><i class="bi bi-pencil-square">Edit</i></a>-->
                <a href="/employees/delete"><i class="bi bi-trash3"></i> </a>
        </td>
    </tr>
    }

</table>
