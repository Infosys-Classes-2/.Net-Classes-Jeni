@model List<Employee>
@{
    ViewData["Title"] = "Employee List";
}


<div> 
    <a asp-controller="Employee" asp-action="Add" class=" btn btn-success" mt="2">
        <i class="bi bi-plus"></i>Add</a>

    <form class="float-end d-flex mt-2">
        <input class="form-control me-2" name ="searchText" type="search" placeholder="Type Employee name" aria-label="searchText">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

</div>



<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Designation</th>
        <th>Level</th>
        <th>Join Date</th>
        <th>Department</th>  
        <th></th>        
    </tr>
    @foreach(Employee employee in Model)
    {
    <tr>
        <td><img height="30" class="rounded-circle" src="/profile-images/@employee.ProfileImage"/></td>
        <td>@employee.FirstName</td>
        <td>@employee.LastName</td>
        <td>@employee.Designation.title</td>
        <td>@employee.Level</td>
        <td>@employee.JoinDate</td>
        <td>@employee.Department.Name</td>
        <td> 
                <a href="/Employee/Edit/@employee.id"><i class="bi bi-pencil-square">Edit</i></a> 
                <!--<a asp-controller="Employee" asp-action="Edit" aspp-roout-id="@employee.id"><i class="bi bi-pencil-square">Edit</i></a>-->
                <a href="/Employee/Delete/@employee.id"><i class="bi bi-trash3"></i> </a>
        </td>
    </tr>
    }

</table>
